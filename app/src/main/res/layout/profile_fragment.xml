<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackground">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="435dp"
        android:layout_height="414dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/background" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profile_image"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/george"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="10"
        android:text="Immune"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/vaccinated_icon"
        app:layout_constraintHorizontal_bias="0.365"
        app:layout_constraintStart_toStartOf="@+id/vaccinated_icon"
        app:layout_constraintTop_toBottomOf="@+id/vaccinated_icon" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Direct Contacts"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/contact_number_text"
        app:layout_constraintStart_toStartOf="@+id/contact_number_text"
        app:layout_constraintTop_toBottomOf="@+id/contact_number_text" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Risk Level"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/risk_level_icon"
        app:layout_constraintStart_toStartOf="@+id/risk_level_icon"
        app:layout_constraintTop_toBottomOf="@+id/risk_level_icon" />

    <TextView
        android:id="@+id/vaccinated_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/circle_red"
        android:elevation="10dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:shadowColor="@android:color/white"
        android:shadowRadius="10.0"
        android:textColor="@color/primaryBackground"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/testing_status_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infected_text" />

    <TextView
        android:id="@+id/vaccinated_verfied_badge"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:background="@drawable/ic_baseline_verified"
        android:elevation="10dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:shadowColor="@android:color/white"
        android:shadowRadius="10.0"
        android:textColor="@color/primaryBackground"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/vaccinated_icon"
        app:layout_constraintStart_toEndOf="@+id/vaccinated_icon"
        app:layout_constraintTop_toTopOf="@+id/vaccinated_icon" />

    <TextView
        android:id="@+id/testing_verfied_badge"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:background="@drawable/ic_baseline_verified"
        android:elevation="10dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:shadowColor="@android:color/white"
        android:shadowRadius="10.0"
        android:textColor="@color/primaryBackground"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/testing_status_icon"
        app:layout_constraintStart_toEndOf="@+id/testing_status_icon"
        app:layout_constraintTop_toTopOf="@+id/testing_status_icon"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/contact_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="15"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.66666667"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Bubbles"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/bubble_number_text"
        app:layout_constraintStart_toStartOf="@+id/bubble_number_text"
        app:layout_constraintTop_toBottomOf="@+id/bubble_number_text" />

    <TextView
        android:id="@+id/testing_status_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_yellow"
        android:elevation="10dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:shadowColor="@android:color/white"
        android:shadowRadius="10.0"
        android:textColor="@color/primaryBackground"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/vaccinated_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/vaccinated_icon" />

    <TextView
        android:id="@+id/bubble_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="3"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/contact_number_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/risk_level_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_green"
        android:elevation="10dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:shadowColor="@android:color/white"
        android:shadowRadius="10.0"
        android:textColor="@color/primaryBackground"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/testing_status_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/testing_status_icon"
        app:layout_constraintTop_toTopOf="@+id/testing_status_icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Testing Status"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/testing_status_icon"
        app:layout_constraintStart_toStartOf="@+id/testing_status_icon"
        app:layout_constraintTop_toBottomOf="@+id/testing_status_icon" />

    <TextView
        android:id="@+id/profile_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="John Smith"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image" />

    <TextView
        android:id="@+id/infected_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Not Infected"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atlanta, GA"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_name_text" />

    <TextView
        android:id="@+id/infected_verified_badge"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:background="@drawable/ic_baseline_verified"
        android:elevation="10dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:shadowColor="@android:color/white"
        android:shadowRadius="10.0"
        android:textColor="@color/primaryBackground"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/infected_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/infected_text"
        app:layout_constraintTop_toTopOf="@+id/infected_text" />


</androidx.constraintlayout.widget.ConstraintLayout>