<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_layout_alt" />

    <TextView
        android:id="@+id/BbNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="54dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/BbCreatorText"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <TextView
        android:id="@+id/BbCreatorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="177dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="177dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <TextView
        android:id="@+id/BbRiskText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="54dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/BbCreatorText"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <Spinner
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/bubble_frequency_spinner"
        app:layout_constraintTop_toBottomOf="@id/BbRiskText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent=".5"
        android:layout_marginTop="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Bb_recycler"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/bubble_frequency_spinner" />

</androidx.constraintlayout.widget.ConstraintLayout>